{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compileOnSave": true,
  "include": ["src/**/*.ts"],

  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "UMD",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  }
}
